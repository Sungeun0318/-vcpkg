{
  "name": "amd-rdf",
  "version": "1.2.0",
  "description": "AMD Radeon data file library",
  "homepage": "https://github.com/GPUOpen-Drivers/libamdrdf",
  "documentation": "https://github.com/GPUOpen-Drivers/libamdrdf/tree/main/docs",
  "license": "MIT",
  "supports": "x64 & (windows | linux)",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
    "cxx": {
      "description": "Allow usage of C++ interface for RDF library"
    },
    "tests": {
      "description": "Build the tests",
      "dependencies": [
        {
          "name": "amd-rdf",
          "features": [
            "cxx"
          ]
        }
      ]
    },
    "tools": {
      "description": "Build RDF tools",
      "dependencies": [
        {
          "name": "amd-rdf",
          "features": [
            "cxx"
          ]
        }
      ]
    }
  }
}
